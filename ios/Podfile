# ======================================================================
# Podfile for Flutter iOS app target: BWGrid
# Standardized to Flutter template + CocoaPods with static frameworks.
# ======================================================================

# Require at least iOS 14 (bump down to '13.0' only if you really need to)
platform :ios, '14.0'

# CocoaPods analytics can influence build latency; keep disabled.
ENV['COCOAPODS_DISABLE_STATS'] = 'true'

# Map Xcode configurations for the BWGrid project.
project 'BWGrid', {
  'Debug' => :debug,
  'Profile' => :release,
  'Release' => :release,
}

# Locate Flutter root from Generated.xcconfig
def flutter_root
  generated_xcode_build_settings_path = File.expand_path(File.join('..', 'Flutter', 'Generated.xcconfig'), __FILE__)
  unless File.exist?(generated_xcode_build_settings_path)
    raise "#{generated_xcode_build_settings_path} must exist. If you're running pod install manually, make sure `flutter pub get` is executed first."
  end

  File.foreach(generated_xcconfig = generated_xcode_build_settings_path) do |line|
    matches = line.match(/FLUTTER_ROOT\=(.*)/)
    return matches[1].strip if matches
  end
  raise "FLUTTER_ROOT not found in #{generated_xcode_build_settings_path}. Try deleting Generated.xcconfig, then run `flutter pub get`."
end

# Pull in Flutter's CocoaPods helpers
require File.expand_path(File.join('packages', 'flutter_tools', 'bin', 'podhelper'), flutter_root)

# Set up Flutter-specific pods / build settings
flutter_ios_podfile_setup

# -------------------------
# Main application target
# -------------------------
target 'BWGrid' do
  # Use static frameworks to reduce transitive linking issues & size.
  use_frameworks! :linkage => :static
  use_modular_headers!

  # Install all Flutter plugin pods declared in .flutter-plugins-dependencies
  flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))

  # Unit/UI test target (optional)
  target 'BWGridTests' do
    inherit! :search_paths
  end
end

# -------------------------
# Post-install adjustments
# -------------------------
post_install do |installer|
  installer.pods_project.targets.each do |target|
    # Apply Flutter’s recommended build settings to each pod target
    flutter_additional_ios_build_settings(target)

    # (Optional but safe) Ensure the deployment target matches the app’s
    target.build_configurations.each do |config|
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '14.0'
    end
  end
end